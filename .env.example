# Configuración de Vaultwarden
DOMAIN=https://vault.example.com
VAULTWARDEN_PORT=8080

# Registro y Invitaciones
SIGNUPS_ALLOWED=true
INVITATIONS_ALLOWED=true
SENDS_ALLOWED=true
WEB_VAULT_ENABLED=true
SHOW_PASSWORD_HINT=false

# Logging
LOG_LEVEL=info
EXTENDED_LOGGING=true

# Admin Panel - IMPORTANTE: Genera un token seguro
# Puedes generarlo con: openssl rand -base64 48
ADMIN_TOKEN=your_secure_admin_token_here

# Configuración de Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_KEEP_DAYS=14
BACKUP_TIMESTAMP=true
TZ=America/Mexico_City
DELETE_AFTER=0
BACKUP_ON_STARTUP=true

# Configuración SMTP (Opcional - para notificaciones por email)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
